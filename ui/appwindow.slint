import { Button, VerticalBox, HorizontalBox } from "std-widgets.slint";

export component AppWindow inherits Window {
    title: "Time Is Money";
    preferred-height: 400px;
    preferred-width: 400px;
    

    callback request-acc-data();
    callback choose-file();
    callback put_me_into_excel();
    property <bool> file-chosen: false;
    in property <string> filename;
    in-out property <string> filepath;
    
    VerticalBox {
        
        Rectangle {
            background: #CFCCD6;
            horizontal-stretch: 1;
            Text {
                text: "Hello world, it's only beginning";
            }
        }
        
        Rectangle {
            background: #B7B5E4;
            horizontal-stretch: 1;
            Text {
                text: filename;
            }
        }

        Rectangle {
            background: #CFCCD6;
            horizontal-stretch: 1;
            HorizontalBox {
                Button {
                    width:190px;
                    height: 100px;
                    padding: 0px;
                    text: "Choose file";
                    clicked => {
                        root.choose-file();
                    }
                }
                Button {
                    width: 190px;
                    height: 100px;
                    padding: 0px;
                    text: "Get accounting related info into terminal";
                    clicked => {
                        root.request-acc-data();
                    }
                }
            } 
        }

        
    }    
    
}
